pipeline{
    agent any
    environment{
       Docker_tag= getDockerTag()
      } 
    stages{
        stage("Build the Docker image"){
            steps{
               sh "docker build . -t reddemma/image/:${Docker_tag}"
                  }
            }
    }

 def getDockerTag(){
  def tag= sh (script: 'git rev-parse Head', returnStdout: true)
  return tag     
}
